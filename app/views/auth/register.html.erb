<!-- app/views/auth/register.html.erb -->
<% content_for :title, "Create Account - Gowisr" %>
<main class="flex min-h-dvh flex-col p-2">
  <div class="flex grow items-center justify-center p-6 lg:rounded-lg lg:bg-white lg:p-10 lg:shadow-xs lg:ring-1 lg:ring-zinc-950/5 dark:lg:bg-zinc-900 dark:lg:ring-white/10">
    <div class="w-full max-w-md">
      <div class="mb-10 text-center">
        <div class="mb-6 flex justify-center">
          <div class="rounded-full bg-blue-600 p-1.5 dark:bg-blue-500">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-8 text-white">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="m4.9 4.9 14.2 14.2"></path>
            </svg>
          </div>
        </div>
        <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-white">Create your account</h2>
        <p class="mt-2 text-zinc-600 dark:text-zinc-400">
          Already have an account? <%= link_to "Sign in", auth_login_path, class: "text-blue-600 hover:text-blue-500 dark:text-blue-500 dark:hover:text-blue-400" %>
        </p>
      </div>
      <%= form_with url: auth_magic_link_path, method: :post, class: "space-y-6" do |form| %>
        <div id="flash">
          <%= render partial: "shared/flash" %>
        </div>
        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium text-zinc-900 dark:text-white" %>
          <div class="mt-1 relative">
            <span class="relative block w-full">
              <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-zinc-500 sm:size-4 dark:text-zinc-400">
                  <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
              </span>
              <%= form.email_field :email, autocomplete: "email", required: true, 
                    class: "block w-full appearance-none rounded-lg border border-zinc-950/10 bg-white px-[calc(theme(spacing.3.5)+theme(spacing.5))] py-[calc(theme(spacing.2.5)-1px)] text-base/6 text-zinc-950 shadow-sm placeholder:text-zinc-500 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 sm:px-[calc(theme(spacing.3)+theme(spacing.5))] sm:py-[calc(theme(spacing.1.5)-1px)] sm:text-sm/6 dark:border-white/10 dark:bg-white/5 dark:text-white dark:placeholder:text-zinc-400" %>
            </span>
          </div>
          <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
            Enter your email address, and we'll send you a magic link to create your account.
          </p>
        </div>
        <div>
          <%= form.submit "Create account", 
                class: "flex w-full justify-center rounded-lg bg-blue-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:bg-blue-500 dark:hover:bg-blue-400" %>
        </div>
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-zinc-200 dark:border-zinc-700"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="bg-white px-2 text-zinc-500 dark:bg-zinc-900 dark:text-zinc-400">Or continue with</span>
          </div>
        </div>
        <!-- Google OAuth Button -->
        <a href="#" class="flex w-full items-center justify-center gap-3 rounded-lg border border-zinc-200 bg-white px-4 py-3 text-sm font-semibold text-zinc-900 shadow-sm hover:bg-zinc-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-zinc-700 dark:bg-zinc-800 dark:text-white dark:hover:bg-zinc-700">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="size-5">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          Continue with Google
        </a>
        <div class="text-center text-sm text-zinc-500 dark:text-zinc-400">
          By signing up, you agree to our
          <a href="/terms" class="text-blue-600 hover:text-blue-500 dark:text-blue-500 dark:hover:text-blue-400">Terms of Service</a>
          and
          <a href="/privacy" class="text-blue-600 hover:text-blue-500 dark:text-blue-500 dark:hover:text-blue-400">Privacy Policy</a>.
        </div>
      <% end %>
    </div>
  </div>
</main>