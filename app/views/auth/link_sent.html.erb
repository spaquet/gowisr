<!-- app/views/auth/link_sent.html.erb -->
<main class="flex min-h-dvh flex-col p-2">
  <div class="flex grow items-center justify-center p-6 lg:rounded-lg lg:bg-white lg:p-10 lg:shadow-xs lg:ring-1 lg:ring-zinc-950/5 dark:lg:bg-zinc-900 dark:lg:ring-white/10">
    <div class="w-full max-w-md">
      <div class="text-center">
        <div class="inline-flex items-center justify-center p-4 mb-6 rounded-full bg-blue-100 dark:bg-blue-900/30">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-8 text-blue-600 dark:text-blue-400">
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-white mb-4">Check your email</h2>
        <% if @email.present? %>
          <p class="text-zinc-600 dark:text-zinc-400 mb-2">
            We've sent a magic link to <strong class="text-zinc-900 dark:text-white"><%= @email %></strong>
          </p>
        <% else %>
          <p class="text-zinc-600 dark:text-zinc-400 mb-2">
            We've sent a magic link to your email address.
          </p>
        <% end %>
        <p class="text-zinc-600 dark:text-zinc-400 mb-8">
          Click the link in the email to sign in to your account.
          The link will expire in 10 minutes.
        </p>
        <div class="mt-8 pt-8 border-t border-zinc-200 dark:border-zinc-700">
          <div class="text-zinc-600 dark:text-zinc-400 mb-4">Didn't receive the email?</div>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <%= link_to "Try again", auth_login_path, 
                  class: "flex justify-center items-center px-6 py-3 border border-zinc-200 bg-white hover:bg-zinc-50 text-zinc-900 rounded-lg dark:border-zinc-700 dark:bg-zinc-800 dark:text-white dark:hover:bg-zinc-700" %>
            <%= link_to "Contact support", "/contact", 
                  class: "flex justify-center items-center px-6 py-3 text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>