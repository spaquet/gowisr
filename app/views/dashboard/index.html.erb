<!-- app/views/dashboard/index.html.erb -->
<% content_for :title, "Dashboard - Gowisr" %>
<div class="space-y-8">
  <header>
    <h1 class="text-2xl/8 font-semibold text-zinc-950 sm:text-xl/8 dark:text-white">Welcome to Gowisr</h1>
    <p class="mt-2 text-base/6 text-zinc-500 sm:text-sm/6 dark:text-zinc-400">
      Your personal AI assistant is ready to help you with your tasks.
    </p>
  </header>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <!-- Quick action cards -->
    <div class="rounded-xl border border-zinc-200 p-6 dark:border-zinc-800">
      <div class="mb-4 flex items-center gap-3">
        <div class="rounded-full bg-blue-100 p-2 dark:bg-blue-900/30">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-blue-600 dark:text-blue-400">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <h3 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">New Chat</h3>
      </div>
      <p class="text-zinc-600 dark:text-zinc-400 text-sm">
        Start a new conversation with the AI assistant.
      </p>
      <div class="mt-4">
        <a href="/chats/new" class="inline-flex items-center gap-1 text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
          Start chat
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
    <div class="rounded-xl border border-zinc-200 p-6 dark:border-zinc-800">
      <div class="mb-4 flex items-center gap-3">
        <div class="rounded-full bg-indigo-100 p-2 dark:bg-indigo-900/30">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-indigo-600 dark:text-indigo-400">
            <rect width="18" height="18" x="3" y="3" rx="2"></rect>
            <path d="M3 9h18"></path>
            <path d="M9 21V9"></path>
          </svg>
        </div>
        <h3 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">New Project</h3>
      </div>
      <p class="text-zinc-600 dark:text-zinc-400 text-sm">
        Create a new project to organize your work.
      </p>
      <div class="mt-4">
        <a href="/projects/new" class="inline-flex items-center gap-1 text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
          Create project
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
    <div class="rounded-xl border border-zinc-200 p-6 dark:border-zinc-800">
      <div class="mb-4 flex items-center gap-3">
        <div class="rounded-full bg-green-100 p-2 dark:bg-green-900/30">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-green-600 dark:text-green-400">
            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <path d="M12 18v-6"></path>
            <path d="M8 15h8"></path>
          </svg>
        </div>
        <h3 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Documentation</h3>
      </div>
      <p class="text-zinc-600 dark:text-zinc-400 text-sm">
        Learn how to use Gowisr effectively.
      </p>
      <div class="mt-4">
        <a href="/docs" class="inline-flex items-center gap-1 text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
          View docs
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <!-- Recent activity section -->
  <section class="mt-8">
    <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Recent Activity</h2>
    <div class="mt-4 overflow-hidden rounded-xl border border-zinc-200 dark:border-zinc-800">
      <ul class="divide-y divide-zinc-200 dark:divide-zinc-800">
        <li class="flex items-center gap-4 p-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50">
          <div class="flex-shrink-0">
            <div class="rounded-full bg-blue-100 p-2 dark:bg-blue-900/30">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-blue-600 dark:text-blue-400">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-zinc-900 dark:text-white">Chat: Marketing Strategy</p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">Created about 2 hours ago</p>
          </div>
        </li>
        <li class="flex items-center gap-4 p-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50">
          <div class="flex-shrink-0">
            <div class="rounded-full bg-indigo-100 p-2 dark:bg-indigo-900/30">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-indigo-600 dark:text-indigo-400">
                <rect width="18" height="18" x="3" y="3" rx="2"></rect>
                <path d="M3 9h18"></path>
                <path d="M9 21V9"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-zinc-900 dark:text-white">Project: Website Redesign</p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">Updated yesterday</p>
          </div>
        </li>
      </ul>
    </div>
  </section>
</div>