<!-- app/views/chats/index.html.erb -->
<div class="flex min-h-screen flex-col bg-white dark:bg-zinc-900">
  <div class="flex flex-1 overflow-hidden">
    <%= render "sidebar" %>
    <main class="flex flex-1 flex-col overflow-hidden">
      <div class="flex h-full flex-col items-center justify-center p-6 text-center">
        <div class="mx-auto max-w-md">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto h-12 w-12 text-zinc-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
          </svg>
          <h2 class="mt-6 text-lg font-semibold text-zinc-900 dark:text-white">Welcome to Chat</h2>
          <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
            Select an existing chat from the sidebar or start a new conversation.
          </p>
          <div class="mt-8">
            <%= link_to new_chat_path, class: "inline-flex items-center gap-2 rounded-lg bg-zinc-900 px-4 py-2.5 text-sm font-semibold text-white hover:bg-zinc-700 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-100" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5">
                <path d="M12 5v14M5 12h14"></path>
              </svg>
              Start a new chat
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>