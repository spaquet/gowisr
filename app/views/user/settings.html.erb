<%# app/views/users/settings.html.erb %>
<% content_for :title, "Settings - Gowisr" %>
<div class="bg-background-light py-6">
  <div class="container mx-auto px-4">
    <h1 class="text-2xl font-semibold">Settings</h1>
    <p class="text-text-muted">Manage your application settings</p>
  </div>
</div>
<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Sidebar Navigation -->
    <div class="lg:col-span-1">
      <div class="bg-background rounded-lg border border-background-lighter shadow-sm overflow-hidden">
        <div class="p-4 border-b border-background-lighter">
          <div class="flex items-center">
            <div class="h-12 w-12 rounded-full bg-primary-dark/30 flex items-center justify-center">
              <span class="text-primary font-semibold text-lg"><%= current_user.display_name[0] %></span>
            </div>
            <div class="ml-4">
              <p class="font-medium"><%= current_user.display_name %></p>
              <p class="text-sm text-text-muted"><%= current_user.email %></p>
            </div>
          </div>
        </div>
        <nav class="p-2">
          <a href="<%= profile_path %>" class="flex items-center px-3 py-2 rounded-md text-text-muted hover:bg-background-light hover:text-text transition">
            <%= icon "user", library: "lucide", class: "h-5 w-5 mr-3" %>
            <span>Profile</span>
          </a>
          <a href="<%= settings_path %>" class="flex items-center px-3 py-2 rounded-md bg-background-light text-primary">
            <%= icon "settings", library: "lucide", class: "h-5 w-5 mr-3" %>
            <span>Settings</span>
          </a>
          <a href="#" class="flex items-center px-3 py-2 rounded-md text-text-muted hover:bg-background-light hover:text-text transition">
            <%= icon "credit-card", library: "lucide", class: "h-5 w-5 mr-3" %>
            <span>Billing</span>
          </a>
          <a href="#" class="flex items-center px-3 py-2 rounded-md text-text-muted hover:bg-background-light hover:text-text transition">
            <%= icon "shield", library: "lucide", class: "h-5 w-5 mr-3" %>
            <span>Security</span>
          </a>
        </nav>
      </div>
    </div>
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <div class="bg-background rounded-lg border border-background-lighter shadow-sm">
        <div class="p-6 border-b border-background-lighter">
          <h2 class="text-lg font-medium">Application Settings</h2>
          <p class="text-text-muted text-sm">Configure your application preferences</p>
        </div>
        <div class="p-6 space-y-6">
          <!-- Theme Settings -->
          <div>
            <h3 class="text-sm font-medium mb-4">Theme</h3>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="border border-primary rounded-lg p-3 relative">
                <div class="flex items-center justify-between mb-3">
                  <span class="text-sm font-medium">Dark</span>
                  <div class="h-4 w-4 rounded-full bg-primary flex items-center justify-center">
                    <%= icon "check", library: "lucide", class: "h-3 w-3 text-white" %>
                  </div>
                </div>
                <div class="h-24 bg-background-light rounded-md border border-background-lighter flex items-center justify-center">
                  <div class="w-12 h-6 rounded-md bg-background"></div>
                </div>
              </div>
              <div class="border border-background-lighter hover:border-primary rounded-lg p-3 relative">
                <div class="flex items-center justify-between mb-3">
                  <span class="text-sm font-medium">Light</span>
                </div>
                <div class="h-24 bg-[#f4f4f8] rounded-md border border-[#e2e2e7] flex items-center justify-center">
                  <div class="w-12 h-6 rounded-md bg-white"></div>
                </div>
              </div>
              <div class="border border-background-lighter hover:border-primary rounded-lg p-3 relative">
                <div class="flex items-center justify-between mb-3">
                  <span class="text-sm font-medium">System</span>
                </div>
                <div class="h-24 bg-gradient-to-r from-background-light to-[#f4f4f8] rounded-md border border-background-lighter flex items-center justify-center">
                  <div class="w-12 h-6 rounded-md bg-gradient-to-r from-background to-white"></div>
                </div>
              </div>
            </div>
          </div>
          <!-- Query Settings -->
          <div class="pt-4 border-t border-background-lighter">
            <h3 class="text-sm font-medium mb-4">Query Settings</h3>
            <!-- AI Model Selection -->
            <div class="mb-6">
              <label for="ai-model" class="block text-sm font-medium mb-2">AI Model</label>
              <select id="ai-model" class="block w-full rounded-md border border-background-lighter bg-background-light shadow-sm px-4 py-3 focus:border-primary focus:ring focus:ring-primary/30 focus:outline-none">
                <option selected>Claude 3.7 Sonnet (Default)</option>
                <option>Claude 3 Opus (Higher Accuracy)</option>
                <option>Claude 3.5 Haiku (Faster)</option>
              </select>
              <p class="mt-1 text-sm text-text-muted">Select the AI model that will process your queries</p>
            </div>
            <!-- Default Tokens -->
            <div>
              <label for="default-tokens" class="block text-sm font-medium mb-2">Default Max Tokens</label>
              <div class="flex items-center">
                <input type="range" id="default-tokens" min="100" max="200000" value="16000" class="w-full h-2 bg-background-lighter rounded-lg appearance-none cursor-pointer">
                <span class="ml-2 text-sm text-text-muted min-w-[60px] text-right">16,000</span>
              </div>
              <p class="mt-1 text-sm text-text-muted">Set the maximum response length for AI queries</p>
            </div>
          </div>
          <!-- Data Preferences -->
          <div class="pt-4 border-t border-background-lighter">
            <h3 class="text-sm font-medium mb-4">Data Preferences</h3>
            <!-- Data Retention -->
            <div class="flex items-center justify-between">
              <div>
                <span class="text-sm font-medium">Data Retention</span>
                <p class="text-text-muted text-sm">Store your queries and results for future reference</p>
              </div>
              <button type="button" class="relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary bg-primary" role="switch" aria-checked="true">
                <span class="sr-only">Use setting</span>
                <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 translate-x-5"></span>
              </button>
            </div>
            <!-- Analytics -->
            <div class="flex items-center justify-between mt-4">
              <div>
                <span class="text-sm font-medium">Usage Analytics</span>
                <p class="text-text-muted text-sm">Collect anonymous usage data to improve the service</p>
              </div>
              <button type="button" class="relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary bg-background-lighter" role="switch" aria-checked="false">
                <span class="sr-only">Use setting</span>
                <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"></span>
              </button>
            </div>
          </div>
          <div class="pt-6 flex justify-end">
            <button type="button" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
              Save settings
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>