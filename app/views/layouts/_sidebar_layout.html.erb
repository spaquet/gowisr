<!-- app/views/layouts/_sidebar_layout.html.erb -->
<div data-controller="sidebar" class="relative isolate flex min-h-svh w-full bg-white max-lg:flex-col lg:bg-zinc-100 dark:bg-zinc-900 dark:lg:bg-zinc-950">
  <!-- Sidebar on desktop -->
  <div class="fixed inset-y-0 left-0 w-64 max-lg:hidden">
    <%= render "shared/sidebar" %>
  </div>
  <!-- Sidebar on mobile -->
  <div data-sidebar-target="panel" class="fixed inset-y-0 w-full max-w-80 transform transition duration-300 ease-in-out z-40 lg:hidden">
    <div class="flex h-full flex-col rounded-lg bg-white shadow-xs ring-1 ring-zinc-950/5 dark:bg-zinc-900 dark:ring-white/10 p-2">
      <div class="-mb-3 px-4 pt-3">
        <button data-action="sidebar#close" aria-label="Close navigation" class="group/item relative flex min-w-0 items-center gap-3 rounded-lg p-2 text-left text-base/6 font-medium text-zinc-950 hover:bg-zinc-950/5 sm:text-sm/5 dark:text-white dark:hover:bg-white/5">
          <svg data-slot="icon" viewBox="0 0 20 20" aria-hidden="true" class="size-6 shrink-0 fill-zinc-500 sm:size-5">
            <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
          </svg>
        </button>
      </div>
      <%= render "shared/sidebar" %>
    </div>
  </div>
  <!-- Overlay for mobile sidebar -->
  <div data-sidebar-target="overlay" data-action="click->sidebar#close" class="fixed inset-0 bg-black/30 opacity-0 pointer-events-none transition-opacity duration-300 lg:hidden"></div>
  <!-- Navbar on mobile -->
  <header class="flex items-center px-4 lg:hidden">
    <div class="py-2.5">
      <button data-action="sidebar#open" aria-label="Open navigation" class="group/item relative flex min-w-0 items-center gap-3 rounded-lg p-2 text-left text-base/6 font-medium text-zinc-950 hover:bg-zinc-950/5 sm:text-sm/5 dark:text-white dark:hover:bg-white/5">
        <svg data-slot="icon" viewBox="0 0 20 20" aria-hidden="true" class="size-6 shrink-0 fill-zinc-500 sm:size-5">
          <path d="M2 6.75C2 6.33579 2.33579 6 2.75 6H17.25C17.6642 6 18 6.33579 18 6.75C18 7.16421 17.6642 7.5 17.25 7.5H2.75C2.33579 7.5 2 7.16421 2 6.75ZM2 13.25C2 12.8358 2.33579 12.5 2.75 12.5H17.25C17.6642 12.5 18 12.8358 18 13.25C18 13.6642 17.6642 14 17.25 14H2.75C2.33579 14 2 13.6642 2 13.25Z" />
        </svg>
      </button>
    </div>
    <div class="min-w-0 flex-1">
      <%= render "shared/navbar" %>
    </div>
  </header>
  <!-- Content -->
  <main class="flex flex-1 flex-col pb-2 lg:min-w-0 lg:pt-2 lg:pr-2 lg:pl-64">
    <div class="grow p-6 lg:rounded-lg lg:bg-white lg:p-10 lg:shadow-xs lg:ring-1 lg:ring-zinc-950/5 dark:lg:bg-zinc-900 dark:lg:ring-white/10">
      <div class="mx-auto max-w-6xl">
        <%= yield %>
      </div>
    </div>
  </main>
</div>