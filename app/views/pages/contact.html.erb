<%# app/views/pages/contact.html.erb %>
<% content_for :title, "Contact Us - Gowisr" %>
<div class="bg-background-light py-12">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
    <p class="text-xl text-text-muted max-w-2xl mx-auto">
      We'd love to hear from you. Get in touch with our team.
    </p>
  </div>
</div>
<div class="container mx-auto px-4 py-16">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
    <!-- Contact Form -->
    <div>
      <h2 class="text-2xl font-semibold mb-6">Send us a message</h2>
      <%= form_with url: "/contact", method: :post, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :name, "Your name", class: "block text-sm font-medium mb-1" %>
          <%= form.text_field :name, required: true, class: "block w-full rounded-md border border-background-lighter bg-background-light shadow-sm px-4 py-3 focus:border-primary focus:ring focus:ring-primary/30 focus:outline-none" %>
        </div>
        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium mb-1" %>
          <%= form.email_field :email, required: true, class: "block w-full rounded-md border border-background-lighter bg-background-light shadow-sm px-4 py-3 focus:border-primary focus:ring focus:ring-primary/30 focus:outline-none" %>
        </div>
        <div>
          <%= form.label :subject, "Subject", class: "block text-sm font-medium mb-1" %>
          <%= form.select :subject, 
              ["General Inquiry", "Sales Question", "Technical Support", "Partnership Opportunity", "Other"], 
              { include_blank: "Select a subject" }, 
              { required: true, class: "block w-full rounded-md border border-background-lighter bg-background-light shadow-sm px-4 py-3 focus:border-primary focus:ring focus:ring-primary/30 focus:outline-none" } %>
        </div>
        <div>
          <%= form.label :message, "Your message", class: "block text-sm font-medium mb-1" %>
          <%= form.text_area :message, rows: 6, required: true, class: "block w-full rounded-md border border-background-lighter bg-background-light shadow-sm px-4 py-3 focus:border-primary focus:ring focus:ring-primary/30 focus:outline-none" %>
        </div>
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= form.check_box :privacy_policy, required: true, class: "h-4 w-4 rounded border-background-lighter text-primary focus:ring-primary" %>
          </div>
          <div class="ml-3 text-sm">
            <%= form.label :privacy_policy, class: "text-text-muted" do %>
              I agree to the <a href="/privacy" class="text-primary hover:text-primary-light">Privacy Policy</a>
            <% end %>
          </div>
        </div>
        <div>
          <%= form.submit "Send message", class: "w-full px-4 py-3 border border-transparent rounded-md shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
        </div>
      <% end %>
    </div>
    <!-- Contact Info -->
    <div>
      <h2 class="text-2xl font-semibold mb-6">Contact Information</h2>
      <div class="bg-background rounded-lg border border-background-lighter p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Email -->
          <div>
            <div class="inline-flex items-center justify-center p-3 bg-primary-dark/20 rounded-full mb-4">
              <%= icon "mail", library: "lucide", class: "h-6 w-6 text-primary" %>
            </div>
            <h3 class="text-lg font-medium mb-1">Email</h3>
            <p class="text-text-muted mb-2">For general inquiries:</p>
            <a href="mailto:info@gowisr.com" class="text-primary hover:text-primary-light">info@gowisr.com</a>
          </div>
          <!-- Support -->
          <div>
            <div class="inline-flex items-center justify-center p-3 bg-primary-dark/20 rounded-full mb-4">
              <%= icon "help-circle", library: "lucide", class: "h-6 w-6 text-primary" %>
            </div>
            <h3 class="text-lg font-medium mb-1">Support</h3>
            <p class="text-text-muted mb-2">Need technical help?</p>
            <a href="mailto:support@gowisr.com" class="text-primary hover:text-primary-light">support@gowisr.com</a>
          </div>
          <!-- Sales -->
          <div>
            <div class="inline-flex items-center justify-center p-3 bg-primary-dark/20 rounded-full mb-4">
              <%= icon "briefcase", library: "lucide", class: "h-6 w-6 text-primary" %>
            </div>
            <h3 class="text-lg font-medium mb-1">Sales</h3>
            <p class="text-text-muted mb-2">For business inquiries:</p>
            <a href="mailto:sales@gowisr.com" class="text-primary hover:text-primary-light">sales@gowisr.com</a>
          </div>
          <!-- Phone -->
          <div>
            <div class="inline-flex items-center justify-center p-3 bg-primary-dark/20 rounded-full mb-4">
              <%= icon "phone", library: "lucide", class: "h-6 w-6 text-primary" %>
            </div>
            <h3 class="text-lg font-medium mb-1">Phone</h3>
            <p class="text-text-muted mb-2">Call us directly:</p>
            <a href="tel:+1-800-123-4567" class="text-primary hover:text-primary-light">+1 (800) 123-4567</a>
          </div>
        </div>
      </div>
      <!-- Office Locations -->
      <h3 class="text-xl font-medium mb-4">Office Locations</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <!-- Location 1 -->
        <div class="bg-background rounded-lg border border-background-lighter p-4">
          <h4 class="font-medium mb-2">San Francisco</h4>
          <address class="text-text-muted not-italic">
            123 Market Street<br>
            Suite 456<br>
            San Francisco, CA 94105<br>
            United States
          </address>
        </div>
        <!-- Location 2 -->
        <div class="bg-background rounded-lg border border-background-lighter p-4">
          <h4 class="font-medium mb-2">London</h4>
          <address class="text-text-muted not-italic">
            45 Tech Square<br>
            Floor 3<br>
            London, EC2A 4BX<br>
            United Kingdom
          </address>
        </div>
      </div>
      <!-- Social Media -->
      <h3 class="text-xl font-medium mb-4">Follow Us</h3>
      <div class="flex space-x-4">
        <a href="https://twitter.com/gowisr" class="inline-flex items-center justify-center p-3 bg-background rounded-lg border border-background-lighter hover:bg-background-light transition">
          <%= icon "twitter", library: "lucide", class: "h-5 w-5 text-primary" %>
        </a>
        <a href="https://linkedin.com/company/gowisr" class="inline-flex items-center justify-center p-3 bg-background rounded-lg border border-background-lighter hover:bg-background-light transition">
          <%= icon "linkedin", library: "lucide", class: "h-5 w-5 text-primary" %>
        </a>
        <a href="https://github.com/gowisr" class="inline-flex items-center justify-center p-3 bg-background rounded-lg border border-background-lighter hover:bg-background-light transition">
          <%= icon "github", library: "lucide", class: "h-5 w-5 text-primary" %>
        </a>
      </div>
    </div>
  </div>
</div>
<!-- FAQ Section -->
<div class="bg-background-light py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-semibold text-center mb-12">Frequently Asked Questions</h2>
    <div class="max-w-3xl mx-auto space-y-8">
      <div>
        <h3 class="text-xl font-medium mb-2">What are your support hours?</h3>
        <p class="text-text-muted">Our support team is available Monday through Friday, 9am to 6pm EST. We strive to respond to all inquiries within 24 hours.</p>
      </div>
      <div>
        <h3 class="text-xl font-medium mb-2">How quickly will I receive a response?</h3>
        <p class="text-text-muted">For general inquiries, we typically respond within 1-2 business days. For urgent technical support issues, we aim to respond within 4 hours during business hours.</p>
      </div>
      <div>
        <h3 class="text-xl font-medium mb-2">Do you offer phone support?</h3>
        <p class="text-text-muted">Yes, phone support is available for our Pro and Business plan customers. Please contact your account manager for details.</p>
      </div>
      <div>
        <h3 class="text-xl font-medium mb-2">Can I schedule a demo before signing up?</h3>
        <p class="text-text-muted">Absolutely! We'd be happy to give you a personalized demo of our platform. Please fill out the contact form and select "Sales Question" as the subject.</p>
      </div>
    </div>
  </div>
</div>